@model EmployeeManagement.Models.UserViewModel
@{
    Layout = null;
}
<environment>
    <link href="~/css/LoginAndAutor.css" rel="stylesheet" />
</environment>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body style="width:100%;height:100%">
    <div>
        <div>
            <h2 class="headText">Авторизация</h2>
        </div>
        <div class="mainDiv">
            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <label asp-for="Login"> Login</label>
                    <div class="UnderDiv">
                        <input class="inputFields" type="text" asp-for="Login" />
                    </div>
                    <div>
                        @Html.ValidationMessageFor(model => model.Login, null, new { @class = "WarningMessage" })
                    </div>
                    <label asp-for="Password">Password</label>
                    <div class="UnderDiv">
                        <input class="inputFields" asp-for="Password" />
                    </div>
                    @Html.ValidationMessageFor(model => model.Password, null, new { @class = "WarningMessage" })
                </div>
            </form>
        </div>
    </div>
</body>
</html>
